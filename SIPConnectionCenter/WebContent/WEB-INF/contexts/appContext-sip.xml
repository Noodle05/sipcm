<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
	<bean id="sipLocationService" class="com.sipcm.sip.locationservice.LocationServiceImpl">
		<lookup-method name="createUserProfile" bean="sipUserProfile" />
	</bean>

	<bean id="voipVendorManager" class="com.sipcm.sip.vendor.VoipVendorManager">
		<lookup-method name="createGoogleVoiceVoipVendorContext"
			bean="googleVoiceVoipVendorContext" />
		<lookup-method name="createSipVoipVendorContext" bean="sipVoipVendorContext" />
	</bean>

	<bean id="googleVoiceManager" class="com.sipcm.googlevoice.GoogleVoiceManager">
		<lookup-method name="getGoogleVoiceSession" bean="googleVoiceSession" />
	</bean>

	<!-- bean id="sipFactory" class="org.springframework.jndi.JndiObjectFactoryBean"> 
		<property name="jndiName" value="java:comp/env/sip/org.gaofamily.CallCenter/SipFactory" 
		/> </bean -->

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="contactExpiresTrigger" />
			</list>
		</property>
	</bean>

	<bean id="contactExpiresTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<!-- see the example of method invoking job above -->
		<property name="jobDetail" ref="contactExpiresJob" />
		<!-- 10 seconds -->
		<property name="startDelay" value="10000" />
		<!-- repeat every 10 seconds -->
		<property name="repeatInterval" value="10000" />
	</bean>

	<bean id="contactExpiresJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="contactExpiresTask" />
		<property name="targetMethod" value="onCheckExpire" />
		<property name="concurrent" value="false" />
	</bean>

	<util:map id="voipVendorToServletMap" key-type="com.sipcm.sip.VoipVendorType"
		value-type="java.lang.String">
		<entry key="SIP" value="DelegatedServlet" />
		<entry key="GOOGLE_VOICE" value="GoogleVoiceServlet" />
	</util:map>

	<bean id="sipLoginConfig" class="org.mobicents.servlet.sip.startup.loading.SipLoginConfig">
		<property name="authMethod" value="DIGEST" />
		<property name="realmName" value="gaofamily.org" />
	</bean>
</beans>